<<% include ../partials/header %>
<div class="container">
    <div class="row">
            <h1 style="text-align: center;">Edit <%= dazzfun.event %></h1>
        <div style="width: 30%; margin: 0 auto;">
            <form action="/dazzfuns/<%= dazzfun._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="event">Event</label>
                    <input class="form-control" type="text" name="dazzfun[event]" id="event" value="<%= dazzfun.event %>">
                </div>
                <div class="form-group">
                    <label for="image">Image Url</label>
                    <input class="form-control" type="text" name="dazzfun[image]" id="image" value="<%= dazzfun.image %>">
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <input class="form-control" type="text" name="dazzfun[description]" id="description" value="<%= dazzfun.description %>">
                </div>
                <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" name="location" id="location" id="location" value="<%= dazzfun.location %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/dazzfuns">Go Back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>